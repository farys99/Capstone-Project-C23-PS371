<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DermaDetect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/cream_10</item>
    </style>

    <style name="Theme.DermaDetect" parent="Base.Theme.DermaDetect" />

    <style name="Header">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenButton">
        <item name="backgroundTint">@color/green_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">21sp</item>


    </style>

    <style name="Semibold">
        <item name="fontFamily">@font/montserratsemibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Content">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>

    </style>

</resources>